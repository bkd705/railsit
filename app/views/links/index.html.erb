<div class="ui centered grid">
  <div class="ui three stackable cards">
    <% @links.each do |link| %>
      <div class="card">
        <div class="content">
          <div class="header"><a href="<%= link.link %>"><%= link.title %></a></div>
          <div class="description"><%= link.description %></div>
          <%= link_to "Comments", link_path(link) %>
        </div>
      </div>
    <% end %>
  </div>
</div>